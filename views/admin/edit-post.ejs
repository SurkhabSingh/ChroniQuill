<a href="/dashboard" class="nav-items">&larr; Back</a>
<div class="admin-title">
  <h2>Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete" />
  </form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
  <label for="title" class="nav-items"><b>Edit Title</b></label>
  <input
    type="text"
    placeholder="Edit Title"
    name="title"
    value="<%= data.title %>"
  />

  <label for="body" class="nav-items"><b>Edit Content</b></label>
  <textarea name="body" col="50" placeholder="Edit content here" rows="10">
<%= data.body %></textarea
  >

  <input type="submit" value="Update" class="btn" />
</form>
